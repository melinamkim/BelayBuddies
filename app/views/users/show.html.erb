<h1>Profile</h1>

<h1><%= @user.full_name %></h1>

  <% if @user.reviews.empty? %>
    <small><em class="text-muted">Be the first one to review this climber</em></small>
  <% end %>


      <div class="bg-white rounded p-3">
        <h5>Add your review:</h5>
        <%= simple_form_for [@user, @review] do |f| %>
          <%= f.input :description, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "jquery-bar-rating" } } %>
          <%= f.submit class:"btn btn-flat" %>
        <% end %>
      </div>

<h3>Reviews:</h3>
<%# <i class="fas fa-star star-yellow"></i> %>
<% @user.reviews.each do |review| %>
  <p><%= review.description %></p> <%= '*' * review.rating %>
<% end %>
<br>

<%= link_to "Back to Profiles", users_path, class: "btn btn-primary btn-lg" %>
