  <div class="container">
    <h1 class="heading text-warning fw-bolder">🧗 <strong> Climbing Buddies Matches </strong> 🧗</h1>
    <div class="cards">
        <% @users.each do |user| %>
            <%= link_to user_path(user) do %>
              <div class="card-user">
                <%= cl_image_tag user.photo.key %>
                 <h2 class="user-name"><%= user.full_name %></h2>
                <div class="card-user-infos">
                    <p><%= user.types_of_climbing %></p>
                   <p class="locationcolor">📍<%= user.location %></p>
                </div>
              </div>
            <% end %>
        <% end %>
    </div>

    <%= form_tag users_path, method: :get, class: "d-flex" do %>

      <%= text_field_tag :location, params[:location], value:params[:location], class: "form-control fs-5", placeholder: "Select Location"%>

      <%= select_tag "gender", options_for_select(["male", "female"]), class: "form-control fs-5", prompt:"Select Gender"%>

      <%= select_tag "level", options_for_select(["beginner", "intermediate", "advanced intermediate", "advanced"]), class: "form-control fs-5", prompt:"Select Gender"%>

      <%= label_tag "indoor_sport_climbing", "Indoor Sport Climbing" %>
      <%= check_box_tag 'indoor_sport_climbing', true %>

      <%= text_field_tag :types_of_climbing, params[:types_of_climbing], collection:["indoor sport climbing", "indoor top roping", "outdoor bouldering", "outdoor sport climbing", "outdoor trad climbing"], class: "form-control fs-5", placeholder: "Select Type of Climbing"%>

    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>


<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
