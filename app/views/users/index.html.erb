  <div class="container">
    <h1 class="heading text-warning fw-bolder">ğŸ§— <strong> Climbing Buddies Matches </strong> ğŸ§—</h1>
    <div class="cards">
        <% @users.each do |user| %>
            <%= link_to user_path(user) do %>
              <div class="card-user">
                <%= cl_image_tag user.photo.key %>
                 <h2 class="user-name"><%= user.full_name %></h2>
                <div class="card-user-infos">
                    <p><%= user.types_of_climbing %></p>
                   <p class="locationcolor">ğŸ“<%= user.location %></p>
