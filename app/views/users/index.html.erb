  <div class="container">
    <h1 class="heading text-warning fw-bolder">🧗 <strong> Climbing Buddies Matches </strong> 🧗</h1>
    <div class="cards">
        <% @users.each do |user| %>

            <%= link_to user_path(user) do %>
              <div class="card-trip">
                <%= cl_image_tag user.photo.key %>
                <div class="card-trip-infos">
                  <div>
                    <span><%= user.full_name %></span>
                    <%= user.gender == "male" ? '<i class="fa-solid fa-mars"></i>'.html_safe : '<i class="fa-solid fa-venus"></i>'.html_safe %>
                    <br>
                    <%= user.level %>
                    <br>
                    📍 <span class="locationcolor"><%= user.location %></span>
                    <br>
                    <span><%= user.types_of_climbing %></span>
                  </div>
                </div>
              </div>
            <% end %>
        <% end %>
    </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
