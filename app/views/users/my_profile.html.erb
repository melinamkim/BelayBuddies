  <div class="container text-center">
    <br>
      <h1>Welcome <span data-controller="typed-js"></span></h1>
      <br>
      <div class="wrapper">
      <%#= link_to "LET'S GO", users_path, class: "button" %>
      </div>
  </div>

<div class="users-show">
  <div class="container">
    <div class="row col-12 user-info text-center">
      <div class="col-6">
        <%= cl_image_tag @user.photo.key %>
        <h1 style="padding-bottom: 1rem;">Hi, <%= @user.first_name.titleize %></h1>
        <div class="row justify-content-center">
          <div class="col-3">
            <div class="d-flex align-items-center justify-content-start">
              <% if @user.gender == "male" %>
                <i class="fa-solid fa-mars me-2"></i>
              <% else %>
                <i class="fa-solid fa-venus text-warning me-2"></i>
              <% end %>
              <p class="fs-6 mb-0"><%= @user.age %></p>
            </div>
            <div class="d-flex align-items-center justify-content-start">
              <i class="fa-solid fa-arrow-up-wide-short me-2"></i>
              <p class="fs-6 mb-0"><%=" "%><%= @user.level.capitalize %></p>
            </div>
          </div>
          <div class="col-5">
            <div class="d-flex align-items-center justify-content-start">
              <i class="fa-solid fa-map-pin me-2"></i>
              <p class="fs-6 mb-0"><%= @user.location %></p>
            </div>
            <div class="d-flex align-items-center justify-content-start">
              <i class="fa-solid fa-mountain me-2"></i>
              <p class="fs-6 mb-0"><%= @user.types_of_climbing.join(", ") %></p>
            </div>
          </div>
        </div>
        <br>
            <%= link_to 'Edit My Profile', edit_user_registration_path, class: "btn" %>
      </div>


    <div class="col-6 text-center">
      <div class="", id="user-review-box">
        <h3 class="text-center fs-2 fw-bolder mt-5">Previous Reviews</h3>
        <% @user.reviews.each do |review| %>
          <p class=fs-6><%= review.description %></p><p><%='<i class="fas fa-star star-yellow"></i>'.html_safe * review.rating %><%=" " %><%= time_ago_in_words( review.created_at) %> ago</p>
        <br>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-6 text-center">

    </div>


    <br>
    <p class="fs-6 mt-2"><%= link_to "Back to Climbers", users_path, class: "text-light" %></p>
  </div>
</div>
</div>
